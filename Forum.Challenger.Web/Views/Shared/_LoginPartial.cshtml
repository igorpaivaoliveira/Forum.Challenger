@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{ 
    string nmPerson = HttpContextAccessor.HttpContext.Session.GetString("nmPerson");
    int cdPerson = HttpContextAccessor.HttpContext.Session.GetInt32("cdPerson") ?? 0;
}
<ul class="navbar-nav">
    @if (cdPerson > 0)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Index" title="Manage">Hello @nmPerson!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" method="get" asp-controller="Login" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Login" asp-action="">Login</a>
        </li>
    }
</ul>
